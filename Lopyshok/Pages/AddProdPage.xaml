<Page x:Class="Lopyshok.Pages.AddProdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopyshok.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProdPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnBack"
                Content="Назад"
                Grid.Column="0"
                Grid.Row="0"
                Margin="10, 0, 0, 0"
                Click="btnBackClick"/>

        <TextBox x:Name="tbArticl"
                 Text="{Binding selectProduct.ID}"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Артикул"  
                 materialDesign:HintAssist.IsFloating="True"
                 Grid.Row="1"
                 VerticalAlignment="Center"
                 Grid.Column="0" Grid.ColumnSpan="3"
                 Margin=" 10, 20 , 5, 0"
                 FontSize="20"/>

        <TextBox x:Name="tbName"
                 Text="{Binding selectProduct.Name}"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Наименование"  
                 materialDesign:HintAssist.IsFloating="True"
                 Grid.Row="2"
                 VerticalAlignment="Center"
                 Grid.Column="0" Grid.ColumnSpan="3"
                 Margin=" 10, 20 , 5, 0"
                 FontSize="20"/>

        <TextBox x:Name="tbPeopleCount"
                 Text="{Binding selectProduct.PeopleForProduction}"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Количество человек"  
                 materialDesign:HintAssist.IsFloating="True"
                 Grid.Row="3" 
                 VerticalAlignment="Center"
                 Grid.Column="0" Grid.ColumnSpan="3"
                 Margin=" 10, 20 , 5, 0"
                 FontSize="20"/>

        <TextBox x:Name="tbDescription"
                 Text="{Binding selectProduct.Description}"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Описание"  
                 materialDesign:HintAssist.IsFloating="True"
                 Grid.Row="4" Grid.RowSpan="2"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Grid.Column="0" Grid.ColumnSpan="3"
                 Margin=" 10, 20 , 5, 0"
                 VerticalAlignment="Stretch"
                 FontSize="20"/>
        
        <ComboBox Name="cbWork"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  materialDesign:HintAssist.Hint="Цех"  
                  materialDesign:HintAssist.IsFloating="True"
                  Grid.Column="0" Grid.ColumnSpan="3"
                  Grid.Row="6"
                  FontSize="20"
                  VerticalAlignment="Center"
                  Margin=" 10, 0 , 5, 0"/>

        <ComboBox Name="cbType"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  materialDesign:HintAssist.Hint="Тип продукта"  
                  materialDesign:HintAssist.IsFloating="True"
                  Grid.Column="0" Grid.ColumnSpan="3"
                  Grid.Row="7"
                  FontSize="20"
                  VerticalAlignment="Center"
                  Margin="10, 0 , 5, 10"/>

        <ListView x:Name="lvListMaterial" 
                  ItemsSource="{Binding selectProduct.ProductMaterial}"
                  Grid.Row="1" Grid.RowSpan="3" 
                  Grid.Column="5" Grid.ColumnSpan="3" 
                  Margin="15"
                  FontSize="20"
                  SelectionChanged="lvListMaterialSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Material.Name}"/>
                        <TextBlock HorizontalAlignment="Right" 
                                   Margin="10, 0" 
                                   VerticalAlignment="Center">
                            <TextBox VerticalContentAlignment="Bottom"
                                     Height="30"/>
                                <Run Text="{Binding CountMaterial}"/>
                                <Run Text="шт"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ComboBox Name="cbMaterial"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  materialDesign:HintAssist.Hint="Материалы"  
                  materialDesign:HintAssist.IsFloating="True"
                  Grid.Row="4"
                  Grid.Column="5" Grid.ColumnSpan="3" 
                  FontSize="20"
                  VerticalAlignment="Center"
                  Margin="0, 0 , 0, 10" 
                  SelectionChanged="cbMaterialSelectionChanged"/>

        <StackPanel Orientation="Vertical"
                    Grid.Row="5" Grid.RowSpan="4"
                    Grid.Column="5" Grid.ColumnSpan="3" >
            <Image x:Name="imgPhoto"
                   Source="{Binding selectProduct.Photo}"
                   Width="300"
                   Height="150"/>
            <Button x:Name="btnAddPhoto"
                    Content="Выбрать фото"
                    Click="btnAddPhotoClick"/>
            <Button x:Name="btnDelPhoto"
                    Content="Удалить фото"
                    Margin="0, 10, 0, 0"
                    Click="btnDelPhotoClick"/>
        </StackPanel>

        <Button x:Name="btnSave"
                Content="Сохранить"
                Grid.Column="7" Grid.ColumnSpan="2"
                Grid.Row="0"
                HorizontalAlignment="Right"
                Margin="0, 0, 10, 0"
                Click="btnSaveClick"/>

        <Button x:Name="btnDelete"
                Content="Удалить"
                Grid.Column="7"
                Grid.Row="0"
                HorizontalAlignment="Left"
                Margin="0, 0, 10, 0"
                Visibility="Hidden"
                Click="btnDeleteClick"/>
    </Grid>
</Page>
